		#trg->destinationConnectedElement
	}
	++corrConnection3:CorrDirectedFeatureConnectionCE
	{
		#src->adeleConnection
		#trg->sourceConnectedElement
	}
	corrSubcomponent:CorrSubcomponenttrgSC{
