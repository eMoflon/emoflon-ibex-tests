rule SonToMaleWithSuperfluousGreenElements refines FamilyMemberToPerson {
	
	source { 
		@refines+ FamilyMemberToPerson.f
		[+] f:Fam.Family {
			[+] -sons->fm
		}
		
		@refines+ FamilyMemberToPerson.fm
		[+] fm:Fam.FamilyMember {
			.name:="son";
		}
	}
	
	target {
		@refines+ FamilyMemberToPerson.p
		[+] p:Per.Male {
			.name:="son";
		}
	}

}

