rule ClassToTableRule {
	
	source {
		[=] classpackage:CH.ClassPackage
		[+] clazz:CH.Clazz {
			[+] - package->classpackage
		}  
	}
	
	target {
		[=] db:DB.DB {
			[+] - tables->table
		}
		[+] table:DB.Table
	}
	
	correspondence {
		[=] packageToDatabase:PackageToDatabase {
			src->classpackage
			trg->db
		}
		[+] clazzToTable:ClazzToTable {
			src->clazz
			trg->table
		}
	}
	
	attributeConditions {
		DefaultAttributeConditionLibrary.eq_string(clazz.name, table.heading)
	}

}


