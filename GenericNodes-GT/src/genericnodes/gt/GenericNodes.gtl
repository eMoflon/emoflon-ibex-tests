package genericnodes.gt
import "http://www.eclipse.org/emf/2002/Ecore"
import "platform:/resource/GenericNodes/model/GenericNodes.ecore"

/*
 * Find simple nodes.
 */

pattern findRoot {
	[=] root : Root
};

pattern findA {
	[=] a : A
};

pattern findB {
	[=] b : B
};

pattern findC {
	[=] c : C
};

pattern findD {
	[=] d : D
};

pattern findAllNodes {
	[=] n : NamedElement
};

pattern findDuplicateNames {
	[=] na : NamedElement
	[=] nb : NamedElement
	
	[#] na.name == nb.name;
};

pattern findName(dName: EString) {
	[=] n : NamedElement
	
	[#] n.name == parameter.dName;
};

pattern findNeighbourPair {
	[=] na : NamedElement {
		[=] -neighbours -> nb
	}
	[=] nb : NamedElement
};

pattern findNeighbourPairNonEqualName refines findNeighbourPair {
	[#] na.name != nb.name;
};
