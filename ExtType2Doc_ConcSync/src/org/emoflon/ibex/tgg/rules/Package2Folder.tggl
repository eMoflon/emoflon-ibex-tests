rule Package2Folder {
	
	source { 
		[=] pr:T.Project {
			[+] -rootPackages->p
		}
		
		[+] p:T.Package
	}
	
	target {
		[=] dc:D.DocContainer {
			[+] -folders->f
		}
		
		[+] f:D.Folder
	}
	
	correspondence {
		[=] pr2dc:Project2DocContainer {
			src->pr
			trg->dc
		}
		
		[+] p2f:Package2Folder {
			src->p
			trg->f
		}
	}
	
	attributeConditions {
		DefaultAttributeConditionLibrary.eq_string(p.name, f.name)
	}

}

