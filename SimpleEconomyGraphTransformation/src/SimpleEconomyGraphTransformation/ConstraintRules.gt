	c: Client
	#c.budget == p.price
}
@optimizedDisjoint
pattern unequal{
	p: Product
	c: Client
	#c.budget != p.price
}
@optimizedDisjoint
pattern greater{
	p: Product
	c: Client
	#c.budget > p.price
}
@optimizedDisjoint
pattern greaterOrEqual{
	p: Product
	c: Client
	#c.budget >= p.price
}

