rule changeBudget(newBudget: EDouble){
	c: Client{
		.budget := param::newBudget
	}
	#c.budget != param::newBudget
}
@optimizedDisjoint
pattern smallerThan{
	p: Product
	c: Client
	#c.budget < p.price
}
@optimizedDisjoint
pattern smallerOrEqual{
	p: Product
	c: Client
	#c.budget <= p.price
}
@optimizedDisjoint
pattern equal{
