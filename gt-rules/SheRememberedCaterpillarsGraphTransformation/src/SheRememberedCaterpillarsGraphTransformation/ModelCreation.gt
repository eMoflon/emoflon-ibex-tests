import "platform:/resource/SheRememberedCaterpillars/model/SheRememberedCaterpillars.ecore"

/**
 * Creates a game.
 */
rule createGame() {
	++ game: Game
}

/**
 * Creates a simple platform in the game.
 */
rule createPlatform() {
	game: Game {
		++ -objects -> platform
	}

	++ platform: SimplePlatform
}

/**
 * Creates an exit platform in the game.
 */
rule createExit {
	game: Game {
		++ -objects -> exit
	}

	++ exit: ExitPlatform
}
