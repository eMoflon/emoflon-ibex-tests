import "platform:/resource/FerrymanProblem/model/FerrymanProblem.ecore"

abstract rule findFerryManAndThingOnDifferentBanks {
	bankOfFerryMan: Bank

	bankOfThings: Bank

	ferryMan: FerryMan {
		-isAt -> bankOfFerryMan
	}

	eater: Thing {
		-isAt -> bankOfThings
	}
}

/**
 * If the ferryman is not on the same bank, 
 * the wolf can eat the goat and the goat can eat the cabbage.
 */
rule eat
refines findFerryManAndThingOnDifferentBanks {
	eater: Thing {
		-- -likesToEat -> eaten
	}

	-- eaten: Thing {
		-- -isAt -> bankOfThings
	}
}

/**
 * Checks whether a thing can eat another.
 */
rule canEat
refines findFerryManAndThingOnDifferentBanks {
	eater: Thing {
		-likesToEat -> eaten
	}

	eaten: Thing {
		-isAt -> bankOfThings
	}
}

/**
 * Deletes the goat.
 */
rule killGoat {
	-- goat: Goat {
		-- -isAt -> bank
	}

	bank: Bank
}
