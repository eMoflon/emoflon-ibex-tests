import "platform:/resource/BPMN/model/BPMN.ecore"

pattern findTask() {
	t: Task
}

rule addTask {
	++ t: Task
}

rule addNode {
	from: Task {
		-outgoing -> flow
	}

	to: Task {
		-- -incoming -> flow
		++ -incoming -> newFlow
	}

	flow: SequenceFlow

	++ t: Task {
		++ -outgoing -> newFlow
		++ -incoming -> flow
	}

	++ newFlow: SequenceFlow
}
