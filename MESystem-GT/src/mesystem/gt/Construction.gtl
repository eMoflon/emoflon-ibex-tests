    [#] item.name == parameter.item;
};

rule releasePatient(name:EString){
	[-] item: ItemInStorage{
	}
	[=] storageCell: StorageCell{
		[-] -items -> item
	}
	enforce(find1ItemInStorage)[storageCell=storageCell]
	[#]item.name==parameter.name;
};


