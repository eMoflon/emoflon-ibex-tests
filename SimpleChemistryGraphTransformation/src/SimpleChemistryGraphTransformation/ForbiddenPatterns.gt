abstract pattern findTwoUnconnectedH{
	h1:H {
		- connections ->a
	}
	a:Atom
	h2:H {
		- connections ->b
	}
	b:Atom
}

condition notConnected = forbid findTwoUnconnectedH


rule forbiddenCreateH20{
	h1: H {
		++ -connections -> o
	}	
	h2: H{
		++ -connections -> o
	}
	o: O{
		++ -connections -> h2
		++ -connections -> h1
	}
}

