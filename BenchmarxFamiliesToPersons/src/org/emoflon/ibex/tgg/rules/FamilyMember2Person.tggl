abstract rule FamilyMember2Person {
	
	source { 
		[=] families : Fam.FamilyRegister {
			[+] -families->f
		}
		[+] f : Fam.Family
		[+] fm : Fam.FamilyMember
	}
	
	target {
		[=] persons : Per.PersonRegister {
			[+] -persons->p
		}
		[+] p : Per.Person
	}
	
	correspondence {
		[=] families2persons : FamiliesToPersonsCorr {
			src->families
			trg->persons
		}
		[+] familyMember2Persons : FamilyMemberToPerson {
			src->fm
			trg->p 
		}
	}
	
	attributeConditions {
		DefaultAttributeConditionLibrary.concat(", ", f.name, fm.name, p.name)
	}

}

